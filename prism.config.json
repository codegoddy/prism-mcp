{
  "server": {
    "name": "prism-mcp",
    "version": "0.1.0"
  },
  "cache": {
    "enabled": true,
    "maxSize": 1000,
    "ttl": 3600000
  },
  "graph": {
    "enableCpp": true,
    "maxNodes": 1000000,
    "enableIncremental": true
  },
  "parser": {
    "maxFileSize": 10485760,
    "timeout": 5000,
    "enableTypeChecking": false
  },
  "logging": {
    "level": 2,
    "output": "stderr"
  },
  "paths": {
    "grammars": "./grammars",
    "cacheDir": "./build/.cache"
  }
}
